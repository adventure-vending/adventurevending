{{#if isEditing}}
  <td>
    {{input
      type="text"
      placeholder="Title"
      value=attrs.adventure.title}}
  </td>
  <td>
    {{input
      type="text"
      placeholder="Description"
      value=attrs.adventure.desc}}
  </td>
  <td {{action "save"}} title="Save">
    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
  </td>
  <td {{action "disableIsEditing"}} title="Cancel">
    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
  </td>
{{else}}
  <td>{{attrs.adventure.title}}</td>
  <td>{{attrs.adventure.desc}}</td>
  <td {{action "enableIsEditing"}} title="Edit">
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
  </td>
  <td {{action attrs.remove attrs.adventure.id}} title="Remove">
    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
  </td>
{{/if}}