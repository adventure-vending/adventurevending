<table class="table table-striped">
  <thead>
    <tr>
      {{#column-head sort=(action "sort") sortBy="title" currentSort=currentSort}}Title{{/column-head}}
      {{#column-head sort=(action "sort") sortBy="desc" currentSort=currentSort}}Description{{/column-head}}
      {{#column-head sort=(action "sort") sortBy="enabled" currentSort=currentSort}}Enabled{{/column-head}}
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each adventures as |adventure|}}
      {{adventure-list-item
        adventure=(mut adventure)
        remove=(action "remove" adventure.id)}}
    {{/each}}
    <tr>
      <td>
        {{input
          type="text"
          placeholder="Title"
          value=newAdventure.title}}
      </td>
      <td>
        {{input
          type="text"
          placeholder="Description"
          value=newAdventure.desc}}
      </td>
      <td colspan="2"></td>
      <td>
        <span {{action "add"}} class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      </td>
    </tr>
  </tbody>
</table>