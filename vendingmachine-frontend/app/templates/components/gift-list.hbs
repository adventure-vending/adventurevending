<h3>Gifts</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>Title</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    {{#each attrs.model.gifts as |gift|}}
    <tr>
      <td>{{gift.id}}</td>
      <td>{{gift.title}}</td>
      <td>{{gift.desc}}</td>
      <td>
        {{#link-to 'edit-gift' gift.id}}
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        {{/link-to}}
      </td>
      <td {{action "remove" gift.id}}>
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
      </td>
    </tr>
    {{/each}}
    <tr>
      <td>#</td>
      <td>
        {{input
          type="text"
          placeholder="Title"
          value=newGift.title}}
      </td>
      <td>
        {{input
          type="text"
          placeholder="Description"
          value=newGift.desc}}
      </td>
      <td></td>
      <td {{action "add"}}>
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      </td>
    </tr>
  </tbody>
</table>